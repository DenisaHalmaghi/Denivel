<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>The coding standard for our project.</description>

    <rule ref="PSR12">
        <exclude name="Generic.Files.LineLength"/>
    </rule>

    <file>app</file>
    <file>config</file>
    <file>routes</file>

    <exclude-pattern>vendor/*</exclude-pattern>

    <!-- Show progression -->
    <arg value="p"/>
</ruleset>